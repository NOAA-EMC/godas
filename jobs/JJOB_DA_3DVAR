#!/bin/bash -l
set -e

cat <<EOF
#================================================================================
#================================================================================
# JJOB_DA_3DVAR
#   Run SOCA 3DVAR, checkpoint, forecast
#================================================================================
#================================================================================
EOF

module purge
source $MOD_PATH/godas.main
module list

cd $RUNCDATE

cat <<EOF
#============================================
# Run SOCA 3DVAR
#============================================
EOF
export OOPS_TRACE=0
srun -n $NPE ${SOCA_EXEC}/soca_3dvar.x ./yaml/3dvar_godas.yml

cat <<EOF
#============================================
# Checkpoint SOCA 3DVAR analysis
#============================================
EOF
if   [ ! -d RESTART ]; then mkdir -p RESTART; fi
srun -n $NPE ${SOCA_EXEC}/soca_checkpoint_model.x ./yaml/checkpointmodel.yml

cat <<EOF
#============================================
# Prepare restarting from analysis
#============================================
EOF
if [ -d ANA ]; then rm -Rf ANA; fi
if [ ! -d ANA ]; then mkdir -p ANA; fi
ln -s $PWD/INPUT_MOM6/* ./ANA/

case $FCSTMODEL in
   "MOM6solo")
       # Input dir for MOM6solo is ANA (instead of INPUT)
       # Unlink old restarts
       rm -f $PWD/ANA/MOM.*.nc
       rm -f $PWD/ANA/cice_bkg.nc
       # Get MOM's restart
       mv -f RESTART/MOM.*.nc ./ANA/  # Because checkpoint dumps analysis in RESTART
       ln -s $PWD/Data/cic.socagodas.an.*.nc ./ANA/cice_bkg.nc
      ;;
   "MOM6CICE5")
       #mv -f RESTART/MOM.*.nc ./fcst/INPUT/
       #mkdir -p ../NEXT_IC
       # Move MOM6 and CICE  analysis to place holder for next forecast
       #mv -f RESTART/MOM.*.nc ../NEXT_IC/

       # TODO: Insert analysis in CICE restart file
       # DEBUGGING HACK REMOVE ...
       #cp /scratch2/NCEPDEV/ocean/Guillaume.Vernieres/mom6-cice5-fv3/test-initcice5/restart/iced.2011-10-01-64800.nc ../NEXT_IC/cice5_model.res.nc
       #cp /scratch1/NCEPDEV/stmp2/Guillaume.Vernieres/Guillaume.Vernieres/rundir/fcsttest/2011100100/fcst/cice*.nc ../NEXT_IC
       #cp -r /scratch1/NCEPDEV/stmp2/Guillaume.Vernieres/Guillaume.Vernieres/rundir/fcsttest/2011100100/fcst/restart ../NEXT_IC
       #cp /scratch1/NCEPDEV/stmp2/Guillaume.Vernieres/Guillaume.Vernieres/rundir/fcsttest/2011100100/fcst/mediator* ../NEXT_IC
       #echo './restart/cice5_model.res.nc' > ../NEXT_IC/ice.restart_file
      ;;
esac
