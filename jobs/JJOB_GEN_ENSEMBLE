#!/bin/bash
#set -e

#================================================================================
#================================================================================
# Generate the ensemble

module purge
module use -a /scratch1/NCEPDEV/stmp4/Daniel.Holdaway/opt/modulefiles
module load apps/jedi/intel-19.0.5.281

echo $RUNCDATE

if [ ! -d $RUNCDATE ]; then mkdir -p $RUNCDATE; fi
cd $RUNCDATE

if   [ ! -d RESTART ]; then mkdir -p RESTART; fi

# Generate the ensemble using soca_enspert

srun -n ${NPE} ${SOCA_EXEC}/soca_enspert.x ./yaml/genenspert.yml 

#if   [ ! -d RESTART ]; then rm -rf RESTART; fi

